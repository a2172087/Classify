if __name__ == '__main__':
    import os


    # 要刪除的目錄路徑
    dir_path = r'C:\Users\A005772\Downloads'

    # 列出目錄中的所有檔案
    files = os.listdir(dir_path)

    # 刪除每個檔案
    for file in files:
        file_path = os.path.join(dir_path, file)
        os.remove(file_path)

    # 要刪除的目錄路徑
    dir_path = os.path.expandvars(r'%USERPROFILE%\AppData\Local\Microsoft\Windows\Explorer')

    # 取得資源回收桶的路徑
    recycle_bin_path = os.path.join(dir_path, 'RecycleBin')

    # 取得所有檔案路徑
    files = [os.path.join(recycle_bin_path, f) for f in os.listdir(recycle_bin_path)]

    # 刪除每個檔案
    for file_path in files:
        os.remove(file_path)
